APP_NAME=CyberSaarthi Gateway
APP_VERSION=2.0.0
APP_ENV=production
LOG_LEVEL=INFO
ENABLE_DOCS=false
ENABLE_GZIP=true
SERVICE_MODE=http
SERVICE_NAME=gateway
MAX_PAYLOAD_BYTES=32768

MODEL_NAME=distilbert-base-uncased
HF_TOKEN=
MAX_LENGTH=256
ONNX_PATH=artifacts/distilbert_phishing.onnx
ONNX_QUANTIZED_PATH=
ONNX_INTRA_OP_THREADS=8
ONNX_INTER_OP_THREADS=2
ONNX_PROVIDERS=["CPUExecutionProvider"]
FORCE_HEURISTIC=false

DATABASE_URL=postgresql+psycopg://cybersaarthi:cybersaarthi@postgres:5432/cybersaarthi
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true
EXPLANATION_CACHE_TTL_SECONDS=3600

HASH_SALT=change-me-in-production
RISK_THRESHOLD=0.5
HIGH_RISK_THRESHOLD=0.7

TEXT_MAX_LENGTH=4096
URL_MAX_LENGTH=2048

# Use JSON list or comma-separated values
CORS_ALLOW_ORIGINS=["https://your-frontend.example.com"]
CORS_ALLOW_METHODS=["GET","POST","OPTIONS"]
CORS_ALLOW_HEADERS=["Authorization","Content-Type","X-API-Key","X-Request-ID"]
TRUSTED_HOSTS=["localhost","127.0.0.1"]

REQUIRE_API_KEY=true
RATE_LIMIT_PER_MINUTE=120
DEFAULT_INSTITUTION_NAME=demo-university
INSTITUTION_SEED_JSON={"demo-university":{"api_key":"replace-with-university-api-key","plan_type":"pro"}}

JWT_SECRET=replace-with-long-random-secret
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=60

INTERNAL_SERVICE_TOKEN=replace-with-internal-service-token
GATEWAY_SERVICE_TIMEOUT_MS=2500
INFERENCE_SERVICE_URL=http://inference:8001
EXPLANATION_SERVICE_URL=http://explanation:8002
METRICS_SERVICE_URL=http://metrics:8003
AUTH_SERVICE_URL=http://auth:8004

DOMAIN_BLACKLIST=["secure-login-update.com","verify-account-now.net","update-banking-access.org"]
